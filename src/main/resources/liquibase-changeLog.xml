<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    
    <changeSet id="create.table.role" author="author">
        <createTable tableName="role">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
           <column name="role" type="VARCHAR(255)"> </column>
        </createTable>
    </changeSet>

    <changeSet id="insert.default.roles" author="author">
        <insert tableName="role">
            <column name="name" value="Admin">
            </column>
        </insert>
        <insert tableName="role">
            <column name="name" value="User"></column>
        </insert>
    </changeSet>

    <changeSet id="create.table.user" author="author">
        <createTable tableName="user">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="true" />
            </column>

            <column name="user_name" type="VARCHAR(255)" >
                <constraints nullable="false"/>
            </column>

            <column name="birthday" type="VARCHAR(255)" >
                <constraints nullable="false"/>
            </column>

            <column name="phone_number" type="VARCHAR(255)" >
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(255)" >
                <constraints nullable="true"/>
            </column>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>

            <column name="role_id" type="INT" >
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="user" baseColumnNames="role_id" constraintName="fk_manager_role_id"
                                 referencedTableName="role"
                                 referencedColumnNames="id" />

    </changeSet>


    <changeSet id="insert.default.user" author="author">
        <insert tableName="user">
            <column name="user_name" value="Name1" />
            <column name="surname" value="Surname1" />
            <column name="birthday" value="01.01.2000"/>
            <column name="phone_number" value="12345678"/>
            <column name="email" value="user@company.com" />
            <column name="password" value="root12345"/>
            <column name="role_id" value="2" />
        </insert>
    </changeSet>

    <changeSet id="insert.default.admin" author="author">
        <insert tableName="user">
            <column name="name" value="Admin"/>
            <column name="surname" value="Adminovich"/>
            <column name="email" value="admin@company.com"/>
            <column name="password" value="root12345"/>
            <column name="role_id" value="1"/>
        </insert>
    </changeSet>

    
</databaseChangeLog>